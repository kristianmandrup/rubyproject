require '../spec_helper'

module <%= app_name.camelize %>
  describe Basic do
    context "empty basic" do
      let(:basic)  { <%= app_name.camelize %>::Basic.new }
    
      describe "#basic" do      
        it "should not have a name" do
          basic.name.should be_nil
        end      
      end 
  
      context "named basic" do
        let(:basic)  { <%= app_name.camelize %>::Basic.new 'blip' }
        it "should have a name 'blip' " do
          basic.name.should be == 'blip'        
        end      
      end
    end
  end
end